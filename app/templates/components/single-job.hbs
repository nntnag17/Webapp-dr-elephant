<table class="app-summary-table box shadow ">
    <tr>
        <td class="severity-side-blob-generic severity-side-blob-{{getColorForSeverity job.severity}}">
        </td>
        <td >
          {{#link-to "job" (query-params jobid=job.id) class="list-group-item"}}

              <table class="app-header">
                  <tr>
                      <td class="heading">
                        {{job.jobname}}
                      </td>
                      <td class="user"><span class="glyphicon glyphicon-user"></span>  {{job.username}}</td>
                  </tr>
              </table>

              <table class="borderless">
                  <tbody>
                  <tr>
                      <td class="date-header">
                        {{getDate job.finishtime}}
                      </td>
                  </tr>

                  <tr>
                      <td class="job-severity-block">{{tasks-severity job=job}}</td>
                  </tr>

                  <tr>
                      <td class="aggregated-metrics-block">{{aggregated-metrics application=job}}</td>
                  </tr>
                  </tbody>
              </table>
          {{/link-to}}
        </td>
    </tr>
</table>
